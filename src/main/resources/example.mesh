# this is a comment
// this is a comment

# define a macro
# It will replace to specified value from Java code
# Define the value by method `MeshLoader#def("aMacro", "1.0f")`
# syntax parsed:
# KEYWORD: DEFINE
# IDENTIFIER: aMacro
define aMacro

# define a macro
# It will replace to specified value "999"
# syntax parsed:
# KEYWORD: DEFINE
# IDENTIFIER: bMacro
# VALUE: INT(999)
define bMacro 999

# This is invalid
# define 0macro

define c
# undefine a macro
# syntax parsed:
# KEYWORD: UNDEF
# IDENTIFIER: c
undef c

# set vertex dimension
# default value is 3
# syntax parsed:
# KEYWORD: SET
# ASSEMBLY: OPT_VERT_DIM
# VALUE: INT(3)
set vertices 3

# set color dimension
# default value is 3
# syntax parsed:
# KEYWORD: SET
# ASSEMBLY: OPT_COLOR_DIM
# VALUE: INT(3)
set colors 3

# set texture dimension
# default value is 2
# syntax parsed:
# KEYWORD: SET
# ASSEMBLY: OPT_TEX_DIM
# VALUE: INT(2)
set texCoords 2

# vertex
# suffix 'f' is optional
# syntax parsed:
# KEYWORD: VERT
# VALUES: FLOAT(0.0), FLOAT(0.0), FLOAT(0.0)
v 0.0 0.0 0.0

# color
# syntax parsed:
# KEYWORD: VERT_COL
# VALUES: FLOAT(1.0), FLOAT(1.0), FLOAT(1.0)
vc 1.0 1.0 1.0

# texture coordinate
# syntax parsed:
# KEYWORD: VERT_TEX
# VALUES: FLOAT(0.0), FLOAT(0.0)
vt 0.0 0.0

# faces
# it will replace to this:
# f 0 1 2 3 aMacro 999
# syntax parsed:
# KEYWORD: FACE
# IDENTIFIERS: aMacro, bMacro
# VALUES: INT(0), INT(1), INT(2), INT(3), ID(aMacro), ID(bMacro)
f 0 1 2 3 aMacro bMacro
